<header>
  <h1>All Jobs for <%= @company.name %></h1>
  <%= link_to "add a new job", new_company_job_path(@company) %>
</header>

<main>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Role</th>
      <th>Company</th>
      <th>City</th>
      <th>Interest</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr class=job_<%= job.id %>>
      <td><%= link_to image_tag('1208-file-type-pencil@2x.svg'), edit_company_job_path(@company, job), class: 'table-button' %></td>
      <td><%= link_to image_tag('1224-basket-delete@2x copy.svg'), company_job_path(@company, job), method: "delete", class: 'table-button' %></td>
      <td><%= link_to job.title, company_job_path(@company, job) %></td>
      <td><p><%= job.company.name %></p></td>
      <td><p><%= job.city %></p></td>
      <td><p><%= job.level_of_interest %></p></td>
    </tr>
    <% end %>
  </tbody>
</table>
</main>
