<header><h1>Companies</h1>
<%= link_to "add a new company", new_company_path %>
</header>

<main>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
    <tr class=company_<%= company.id %>>
      <td class="table-button"><%= link_to image_tag('1208-file-type-pencil-toolbar@2x.svg', alt: "Edit"), edit_company_path(company) %></td>
      <td class="table-button"><%= link_to image_tag('1224-basket-delete-toolbar@2x.svg', alt: "Delete"), company_path(company), method: "delete" %></td>
      <td><%= link_to company.name, company_path(company) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</main>
