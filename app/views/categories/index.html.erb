<header>
<h1>Categories</h1>
<%= link_to "add a new category", new_category_path %>
</header>

<main>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr class=category_<%= category.id %>>
      <td class="table-button"><%= link_to image_tag('1208-file-type-pencil-toolbar@2x.svg', alt: "Edit"), edit_category_path(category) %></td>
      <td class="table-button"><%= link_to image_tag('1224-basket-delete-toolbar@2x.svg', alt: "Delete"), category_path(category), method: "delete" %></td>
      <td><%= category.title %></td>
      <td><%= link_to "#{category.jobs.count} jobs", category_path(category) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</main>
